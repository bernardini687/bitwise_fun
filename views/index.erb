<html>
  <head>
    <title>bitwise fun (<%= score %>)</title>
    <link href="<%= url '/styles.css' %>" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="centric">

      <div>
        <% bytes.each do |byte| %>
          <div class="row">
            <% byte.split('').each do |bit| %>
              <label class="bit">
                <% if bit == '0' %>
                  <span class="zero"></span>
                <% else %>
                  <span class="one"></span>
                <% end %>
              </label>
            <% end %>
          </div>
        <% end %>
      </div>

      <form>
        <div class="row">
          <% 8.times do |n| %>
            <label class="container">
              <input type="hidden" name="<%= n %>" value="0" />
              <input type="checkbox" name="<%= n %>" value="1" />
              <span class="checkmark"></span>
            </label>
          <% end %>
        </div>
        <label class="container">
          <input type="submit" value="" />
          <span class="button"></span>
        </label>
      </form>

    </div>
  </body>
</html>
